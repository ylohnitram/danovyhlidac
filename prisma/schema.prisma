generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Smlouva {
  id          Int      @id @default(autoincrement())
  nazev       String
  castka      Float
  kategorie   String
  datum       DateTime
  dodavatel   String
  zadavatel   String
  typ_rizeni  String?  @default("standardn√≠")
  external_id String?
  lat         Float?
  lng         Float?
  podnety     Podnet[]
  dodatky     Dodatek[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Dodavatel {
  nazev          String   @id
  ico            String   @unique
  datum_zalozeni DateTime
  pocet_zamestnancu Int?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
}

model Dodatek {
  id         Int      @id @default(autoincrement())
  smlouva    Smlouva  @relation(fields: [smlouva_id], references: [id])
  smlouva_id Int
  castka     Float
  datum      DateTime
  created_at DateTime @default(now())
}

model Podnet {
  id         Int      @id @default(autoincrement())
  jmeno      String
  email      String
  smlouva    Smlouva  @relation(fields: [smlouva_id], references: [id])
  smlouva_id Int
  zprava     String
  created_at DateTime @default(now())
}
